<script>
  const phrases: string[] = [
    "Web Maintenance",
    "Website Design Changes",
    "Website Plugin Updates",
    "Daily Website Backups",
    "Secure and Reliable Hosting",
  ];

  let current = 0;
  const rotatingText = document.getElementById("rotatingText");

  if (rotatingText) {
    rotatingText.textContent = phrases[current];

    setInterval(() => {
      rotatingText.classList.remove("animate-text");
      void rotatingText.offsetWidth; // forzar reflow para reiniciar la animación
      current = (current + 1) % phrases.length;
      rotatingText.textContent = phrases[current];
      rotatingText.classList.add("animate-text");
    }, 3000);
  }
</script>

<style>
  .rotating-text-container {
    overflow: hidden;
    position: relative;
    height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .rotating-text {
    display: inline-block;
    white-space: nowrap;
    opacity: 0;
    transform: translateX(-100%);
    transition: none;
  }

  .animate-text {
    animation: slide-in-out 3s ease-in-out forwards;
  }

  @keyframes slide-in-out {
    0% {
      opacity: 0;
      transform: translateX(-100%);
    }
    20% {
      opacity: 1;
      transform: translateX(0%);
    }
    80% {
      opacity: 1;
      transform: translateX(0%);
    }
    100% {
      opacity: 0;
      transform: translateX(100%);
    }
  }
</style>
