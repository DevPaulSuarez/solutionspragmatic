<script>
  const phrases = [
    {
      text: "Se ajusta perfectamente a cualquier pantalla  ",
      color: "text-cyan-500 text-shadow-lg/30",
    },
    {
      text: "Luce bien en computadoras, tablets y celulares  ",
      color: "text-indigo-600 text-shadow-lg/30",
    },
    {
      text: "Pensado para funcionar primero en tu celular  ",
      color: "text-indigo-300 text-shadow-lg/30",
    },
  ];

  let i = 0;
  let j = 0;
  let isDeleting = false;
  const speed = 100;
  const target = document.getElementById("typewriter");

  function type() {
    const currentPhrase = phrases[i];
    const displayed = isDeleting
      ? currentPhrase.text.substring(0, j--)
      : currentPhrase.text.substring(0, j++);

    if (!target) return;
    target.innerHTML = `<span class="${currentPhrase.color}">${displayed}</span>`;

    if (!isDeleting && j === currentPhrase.text.length) {
      isDeleting = true;
      setTimeout(type, 1000); // Espera antes de borrar
    } else if (isDeleting && j === 0) {
      isDeleting = false;
      i = (i + 1) % phrases.length;
      setTimeout(type, 300);
    } else {
      setTimeout(type, isDeleting ? 80 : 100);
    }
  }

  document.addEventListener("DOMContentLoaded", type);
</script>
