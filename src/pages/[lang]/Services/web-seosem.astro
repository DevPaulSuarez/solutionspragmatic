  ];

  let i = 0;
  let j = 0;
  let isDeleting = false;
  const speed = 100;
  const target = document.getElementById("typewriter");

  function type() {
    const currentPhrase = phrases[i];
    const displayed = isDeleting
      ? currentPhrase.text.substring(0, j--)
      : currentPhrase.text.substring(0, j++);

    if (!target) return;
    target.innerHTML = `<span class="${currentPhrase.color}">${displayed}</span>`;

    if (!isDeleting && j === currentPhrase.text.length) {
      isDeleting = true;
      setTimeout(type, 1500); // Pausa antes de borrar
    } else if (isDeleting && j === 0) {
