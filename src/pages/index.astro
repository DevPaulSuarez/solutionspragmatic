---
import { supportedLangs, defaultLang } from '../i18n/translations';

export const prerender = false; // Necesario para acceder a Astro.request

const acceptLanguage = Astro.request.headers.get('accept-language') ?? '';
const preferredLang = supportedLangs.find((lang) => acceptLanguage.includes(lang)) ?? defaultLang;

Astro.redirect(`/${preferredLang}/`);
