---
import en from "../locales/en.json";
import es from "../locales/es.json";

const { lang } = Astro.params;

type Lang = "en" | "es";

const locales: Record<Lang, typeof en> = { en, es };

const currentLang: Lang = lang === "es" || lang === "en" ? lang : "en";
const t = locales[currentLang];
---
<footer class="relative bg-gray-900 text-gray-300 pt-12 pb-6 px-6 md:px-16 overflow-hidden">
  <!-- Imagen de fondo -->
  <div class="absolute inset-0 z-0">
    <img src="/footer.jpg" alt="Fondo footer" class="w-full h-full object-cover opacity-20">
  </div>

  <!-- Contenido del footer -->
  <div class="relative z-10 max-w-7xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-10">

    <!-- Branding -->
    <div>
      <h2 class="text-white text-xl font-bold mb-2">Solutions Pragmatic</h2>
      <p class="text-sm text-gray-300">
        Creamos soluciones web efectivas y a medida para empresas en Perú y EE.UU.
      </p>
    </div>

    <!-- Navegación -->
    <div>
      <h3 class="text-white font-semibold mb-3">Enlaces</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/" class="hover:text-white">Inicio</a></li>
        <li>          <a
            class="hover:underline cursor-pointer"
            href={Astro.url.pathname === `/${currentLang}`
              ? "#Services"
              : `/${currentLang}#Services`}
            aria-label="Servicios"
          >
            {t.navService}
          </a></li>
        <li><a href="/portafolio" class="hover:text-white">Portafolio</a></li>
        <li><a href="/contacto" class="hover:text-white">Contáctanos</a></li>
      </ul>
    </div>

    <!-- Contacto -->
    <div>
      <h3 class="text-white font-semibold mb-3">Contacto</h3>
      <ul class="text-sm space-y-2">
        <li>Email: <a href="mailto:contacto@solutionspragmatic.com" class="hover:text-white">contacto@solutionspragmatic.com</a></li>
        <li>WhatsApp: <a href="https://wa.me/51987654321" target="_blank" class="hover:text-white">+51 987 654 321</a></li>
        <li>EE.UU.: <a href="tel:+18015551234" class="hover:text-white">+1 (801) 555-1234</a></li>
      </ul>
    </div>

    <!-- Redes sociales -->
    <div>
      <h3 class="text-white font-semibold mb-3">Síguenos</h3>
      <div class="flex space-x-4">
        <!-- Aquí puedes actualizar los href con tus enlaces reales -->
        <a href="#" target="_blank" class="hover:text-white">
          <!-- Facebook Icon -->
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M22 12a10 10 0 1 0-11.5 9.9v-7h-2v-3h2v-2.3c0-2 1.2-3.1 3-3.1.9 0 1.8.1 1.8.1v2h-1c-1 0-1.3.6-1.3 1.2V12h2.3l-.4 3H14v7A10 10 0 0 0 22 12z"/>
          </svg>
        </a>
        <a href="#" target="_blank" class="hover:text-white">
          <!-- Twitter Icon -->
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
